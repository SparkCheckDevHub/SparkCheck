@page "/deleteaccount"
@layout MainLayout
@inject NavigationManager Navigation
@inject UserSessionService UserSession

<!-- MOBILE VIEW (XS, SM) -->
<MudHidden Breakpoint="Breakpoint.MdAndUp">
    <MudStack Spacing="6" AlignItems="AlignItems.Center" Style="width: 100%">

        <img src="images/logo.png"
             alt="SparkCheck logo"
             style="width: 100%;" />

        <MudText Typo="Typo.body1" Align="Align.Center" Class="spark-text">
            Delete User Account?
        </MudText>

        <MudText Typo="Typo.caption" Align="Align.Center" Class="spark-text" Style="max-width: 320px;">
            Why not take a break and thinking it over.
        </MudText>

        <MudStack Spacing="4" AlignItems="AlignItems.Center" Style="width: 80%; max-width: 320px;">
            <MudButton Variant="Variant.Filled" Class="primary-button" FullWidth="true" OnClick="@(() => Navigation.NavigateTo("/deleteconfirmation"))">
                Delete Account
            </MudButton>

            <MudButton Variant="Variant.Filled" Class="secondary-button" FullWidth="true" OnClick="@(() => Navigation.NavigateTo("/dashboard"))">
                Cancel
            </MudButton>
        </MudStack>

        <MudText Typo="Typo.subtitle2" Align="Align.Center" Class="spark-text">
            © 2025 SparkCheck | Cortanix™
        </MudText>
    </MudStack>
</MudHidden>

<!-- DESKTOP/TABLET VIEW (MD and up) -->
<MudHidden Breakpoint="Breakpoint.SmAndDown">
    <MudContainer MaxWidth="MaxWidth.Medium">
        <MudStack Spacing="8" AlignItems="AlignItems.Center">
            <img src="images/logo.png"
                 alt="SparkCheck logo"
                 style="width: 70%;" />

            <MudText Typo="Typo.h6" Align="Align.Center" Class="spark-text">
                SparkCheck is optimized for mobile devices.
            </MudText>

            <MudText Typo="Typo.body1" Align="Align.Center" Class="spark-text">
                For the best experience, please open SparkCheck on your phone and save it to your home screen.
            </MudText>

            <MudText Typo="Typo.subtitle2" Align="Align.Center" Class="spark-text">
                © 2025 SparkCheck | Cortanix™
            </MudText>
        </MudStack>
    </MudContainer>
</MudHidden>

@code {
    private void Cancel() => Navigation.NavigateTo("/dashboard");

    private void ConfirmDelete() => Navigation.NavigateTo("/deleteconfirmation");
}
