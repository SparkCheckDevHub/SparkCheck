@page "/controls"
@layout MainLayout
@inherits SparkCheck.Shared.SecureBasePage

<MudContainer MaxWidth="MaxWidth.False" Class="d-flex flex-column min-vh-100 justify-center align-center px-4">
    <MudText Typo="Typo.h5" Class="mb-4 text-center">
        Account Controls
    </MudText>

    <MudStack Spacing="2" Class="w-full">
        <MudButton Variant="Variant.Filled" FullWidth="true" OnClick="@(() => Navigation.NavigateTo("/deleteaccount"))">
            Delete Account
        </MudButton>

        <MudButton Variant="Variant.Filled" FullWidth="true" OnClick="@(() => Navigation.NavigateTo("/logout"))">
            Log Out
        </MudButton>
    </MudStack>

    <MudSpacer />
    <BottomNavBar />
</MudContainer>
