@page "/"
@rendermode InteractiveServer
@layout MainLayout
@inject NavigationManager Navigation

<div class="welcome-container">
    <h1 class="welcome-title section-spacing">Welcome to VibeCheck</h1>

    <p class="welcome-subtext section-spacing">
        Find your vibe. Log in with your phone number to get started.
    </p>

    <button class="welcome-button section-spacing" @onclick="NavigateToPhoneLogin">
        Continue with Phone Number
    </button>

    <div class="account-prompt section-spacing">
        <span class="account-text">First time?</span>
        <button type="button" class="account-link" @onclick="NavigateToCreateAccount">Create Account</button>
    </div>
</div>

@code {
    private void NavigateToPhoneLogin() => Navigation.NavigateTo("/phonelogin");
    private void NavigateToCreateAccount() => Navigation.NavigateTo("/createaccount");
}
