@page "/welcome"
@rendermode InteractiveServer
@layout MainLayout
@inject NavigationManager Navigation

<MudPaper Style="min-height: 100vh; padding: 1rem; display: flex; flex-direction: column; justify-content: center;">
    <MudStack Spacing="3" AlignItems="AlignItems.Center">

        <MudText Typo="Typo.h4" Align="Align.Center">
            Welcome to SparkCheck
        </MudText>

        <MudText Typo="Typo.subtitle1" Align="Align.Center">
            Find your Spark. Log in with your phone number to get started.
        </MudText>

        <MudButton Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.PermPhoneMsg"
                   OnClick="NavigateToPhoneLogin"
                   FullWidth="true">
            Continue with Phone Number
        </MudButton>

        <MudStack AlignItems="AlignItems.Center" Spacing="1">
            <MudText Typo="Typo.body2">First time?</MudText>
            <MudButton Variant="Variant.Text"
                       OnClick="NavigateToCreateAccount">
                Create Account
            </MudButton>
        </MudStack>

    </MudStack>
</MudPaper>

@code {
    private void NavigateToPhoneLogin() => Navigation.NavigateTo("/phonelogin");
    private void NavigateToCreateAccount() => Navigation.NavigateTo("/createaccount");
}
